<div class="row">

  <div class="col s12 m12">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Welcome</span>
        <p>Create short URLs that can be easily shared.</p>
      </div>
    </div>
  </div>


  <%= form_with(model: WebAddress.new, url: {action: 'generate', controller: 'web_addresses'}, class: 'col s12') do |f| %>
      <div class="row">
        <div class="input-field col s6">
          <%= f.text_field 'url', placeholder: 'Enter long url' %>
        </div>
        <div class="input-field col s6">
          <%= f.submit 'Generate short url', class: 'waves-effect waves-light btn' %>
        </div>
      </div>
  <% end %>
</div>
<div id="result">
</div>

